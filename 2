import time
import smtplib
from selenium import webdriver
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText

# Configurations
URL = "https://greekforgreek.com"  # Replace with your desired URL
SMTP_SERVER = "smtp.example.com"
SMTP_PORT = 587
EMAIL_SENDER = "your-email@example.com"
EMAIL_PASSWORD = "your-email-password"
EMAIL_RECEIVER = "teams-channel-email@example.com"  # For Teams channel or regular email

def scrape_full_html(url):
    """Scrape the full HTML content of the webpage."""
    driver = webdriver.Chrome()  # Ensure ChromeDriver is in PATH
    driver.get(url)
    time.sleep(5)  # Wait for the page to load completely

    # Get the full HTML of the page
    full_html = driver.page_source
    driver.quit()
    return full_html

def send_email_with_html(subject, html_content, receiver_email):
    """Send the full HTML content via email."""
    msg = MIMEMultipart("alternative")
    msg['From'] = EMAIL_SENDER
    msg['To'] = receiver_email
    msg['Subject'] = subject

    # Attach the HTML content
    msg.attach(MIMEText(html_content, 'html'))

    with smtplib.SMTP(SMTP_SERVER, SMTP_PORT) as server:
        server.starttls()
        server.login(EMAIL_SENDER, EMAIL_PASSWORD)
        server.sendmail(EMAIL_SENDER, receiver_email, msg.as_string())
        print("HTML email sent successfully.")

def main():
    try:
        # Scrape the full HTML content of the page
        full_html = scrape_full_html(URL)

        # Send the HTML content via email
        send_email_with_html(
            subject="Greek for Greek - Homepage HTML",
            html_content=full_html,
            receiver_email=EMAIL_RECEIVER
        )
    except Exception as e:
        print("An error occurred:", e)

if __name__ == "__main__":
    main()
