import pymsteams
import os

# Set the webhook URL and team/group ID
webhook_url = os.environ["MS_TEAMS_WEBHOOK_URL"]
team_id = "your_team_id"
channel_id = "your_channel_id"

# Create a connector card
card = pymsteams.connectorcard(webhook_url)

# Set the title and text of the card
card.title("Image Upload")
card.text("Uploading an image to the channel...")

# Upload the image
image_path = "path/to/your/image.jpg"
card.addImage(image_path, "Image Description")

# Send the card to the team/group
card.send_to_team(team_id, channel_id)
