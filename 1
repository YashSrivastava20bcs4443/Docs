https://storage.googleapis.com/chrome-for-testing-public/128.0.6613.137/win64/chrome-win64.zip



trigger:
- main

pool:
  vmImage: 'windows-latest'  # Use a Windows-based agent

steps:
- task: UsePythonVersion@0
  inputs:
    versionSpec: '3.x'
    addToPath: true

- script: |
    python -m pip install --upgrade pip
    pip install selenium
  displayName: 'Install Python dependencies'

- script: |
    curl -o chrome-win64.zip https://storage.googleapis.com/chrome-for-testing-public/128.0.6613.137/win64/chrome-win64.zip
    tar -xf chrome-win64.zip
    move chrome-win64/chrome.exe "C:\Program Files\Google\Chrome\Application\chrome.exe"
    move chrome-win64/chromedriver.exe "C:\Program Files\Google\Chrome\Application\chromedriver.exe"
  displayName: 'Install Chrome and ChromeDriver'

- script: |
    python main.py
  displayName: 'Run Python Script'



  chrome_driver_path = "C:\\Program Files\\Google\\Chrome\\Application\\chromedriver.exe"
