import requests
from requests.auth import HTTPBasicAuth
import urllib3

urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

BASE_URL = "https://<storage-system-ip>/ConfigurationManager/v1"  # Replace with correct base URL
USERNAME = "<your-username>"
PASSWORD = "<your-password>"

def test_endpoint(endpoint):
    url = f"{BASE_URL}/{endpoint}"
    try:
        response = requests.get(
            url,
            auth=HTTPBasicAuth(USERNAME, PASSWORD),
            headers={"Accept": "application/json"},
            verify=False
        )
        print(f"Status Code: {response.status_code}")
        if response.status_code == 200:
            print(response.json())
        else:
            print(response.text)
    except Exception as e:
        print(f"Error: {e}")

if __name__ == "__main__":
    test_endpoint("sessions")  # Test session endpoint


import requests

# Define the API endpoint for alerts
url = "https://<your_vsp_endpoint>/simple/v1/objects/alerts"
headers = {
    "Authorization": "Bearer <your_token>"
}

response = requests.get(url, headers=headers)

if response.status_code == 200:
    alert_data = response.json()
    print(alert_data)
else:
    print(f"Failed to fetch alerts: {response.status_code}")
