[Unit]
Description=Elasticsearch
Documentation=https://www.elastic.co
Wants=network-online.target
After=network-online.target

[Service]
Type=notify
ExecStart=/home/yash/ELK/elasticsearch-8.16.1/bin/elasticsearch -p /home/yash/ELK/elasticsearch-8.16.1/elasticsearch.pid
User=yash
Group=yash
Restart=on-failure
RuntimeDirectory=elasticsearch
PrivateTmp=true

[Install]
WantedBy=multi-user.target


[Unit]
Description=Kibana
Documentation=https://www.elastic.co
Wants=elasticsearch.service
After=elasticsearch.service

[Service]
Type=simple
ExecStart=/home/yash/ELK/kibana-8.16.1/bin/kibana
User=yash
Group=yash
Restart=on-failure
Environment=PATH=/usr/bin:/bin

[Install]
WantedBy=multi-user.target
