# HTTP server block to redirect to HTTPS
server {
    listen 80;
    server_name CCO.fareportal.com.local;

    location / {
        return 301 https://$host$request_uri;
    }

    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}

# HTTPS server block
server {
    listen 443 ssl;
    server_name CCO.fareportal.com.local;

    # SSL certificate and key
    ssl_certificate /etc/nginx/ssl/CCO.fareportal.com.local.crt;
    ssl_certificate_key /etc/nginx/ssl/CCO.fareportal.com.local.key;

    # SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH;

    # Serve static files
    location /static/ {
        alias /var/www/TFN-Web-Dashboard/client/build/static/;
        autoindex off;
        expires 1d;
    }

    # Proxy all other requests to the backend
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}


sudo ln -s /etc/nginx/sites-available/TFN-Web-Dashboard /etc/nginx/sites-enabled/

ls -l /etc/nginx/sites-enabled/

sudo nginx -t

sudo systemctl reload nginx
