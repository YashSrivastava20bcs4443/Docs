sudo adduser --system --home /var/lib/asterisk --no-create-home --group asterisk

sudo chown -R asterisk:asterisk /etc/asterisk
sudo chown -R asterisk:asterisk /var/{lib,log,spool}/asterisk
sudo chown -R asterisk:asterisk /usr/lib/asterisk
sudo chown -R asterisk:asterisk /var/www/


sudo nano /etc/asterisk/asterisk.conf

runuser = asterisk
rungroup = asterisk

cd /usr/src/freepbx
./start_asterisk start
sudo asterisk -rvvv


sudo systemctl enable asterisk
sudo systemctl start asterisk
sudo systemctl restart apache2


sudo ./install -n

sudo apt update
sudo apt install software-properties-common
sudo add-apt-repository ppa:ondrej/php
sudo apt update

sudo apt install php7.4 php7.4-cli php7.4-mysql php7.4-curl php7.4-xml php7.4-mbstring php7.4-zip php7.4-gd php7.4-bcmath

sudo update-alternatives --set php /usr/bin/php7.4

sudo a2dismod php8.1
sudo a2enmod php7.4
sudo systemctl restart apache2
