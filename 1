# Exit on error
$ErrorActionPreference = "Stop"

# Define the client src directory relative to the script location
$srcDir = Join-Path $PSScriptRoot "client\src"

# Ensure the src directory exists
if (-not (Test-Path $srcDir)) {
    Write-Host "Error: Source directory $srcDir not found. Please ensure the 'client' folder contains a 'src' folder."
    exit 1
}

# Check if style.css exists
$styleCssPath = Join-Path $srcDir "style.css"
if (-not (Test-Path $styleCssPath)) {
    Write-Host "Warning: style.css not found in $srcDir. Please ensure it exists and contains the required CSS."
    exit 1
} else {
    Write-Host "Confirmed: style.css found in $srcDir and will be used."
}

# Function to write file with UTF-8 without BOM
function Write-FileWithoutBom {
    param (
        [string]$Path,
        [string]$Content
    )
    $utf8NoBom = New-Object System.Text.UTF8Encoding($false)
    [System.IO.File]::WriteAllText($Path, $Content, $utf8NoBom)
}

