trigger:
- main

pool:
  name: 'Default'

steps:
  - script: |
      Invoke-WebRequest -Uri https://storage.googleapis.com/chrome-for-testing-public/128.0.6613.137/win64/chromedriver-win64.zip -OutFile chromedriver.zip
      Expand-Archive chromedriver.zip -DestinationPath .\chromedriver
      $env:PATH += ";$PWD\chromedriver"
    displayName: 'Install ChromeDriver'

  - script: |
      python main.py
    displayName: 'Run Python Script'


    # Specify the path to chromedriver
chrome_driver_path = "./chromedriver/chromedriver.exe"
