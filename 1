import shutil
from webdriver_auto_update.chrome_app_utils import ChromeAppUtils
from webdriver_auto_update.webdriver_manager import WebDriverManager

# Get the Chrome application version
chrome_app_utils = ChromeAppUtils()
chrome_app_version = chrome_app_utils.get_chrome_version()
print("Chrome application version: ", chrome_app_version)

# Directory to store the WebDriver
driver_directory = "C:\\chromedriver-win64\\"

# Initialize WebDriverManager with the specific version
driver_manager = WebDriverManager(driver_directory)

# Set a specific version (replace 'X.Y.Z' with your required version)
specific_version = "X.Y.Z"
driver_manager.set_version(specific_version)

# Download and setup the specific version
driver_manager.main()
