    # Click on the 'Alerts' tab
    try:
        alerts_tab = WebDriverWait(driver, 10).until(
            EC.element_to_be_clickable((By.XPATH, "//span[contains(@class, 'x-tree-node-text') and text()='Alerts']"))
        )
        alerts_tab.click()
        time.sleep(10)  # Wait for the content to load

        # Zoom out to 50% and take a screenshot of the Alerts tab
        alerts_screenshot = f"{screenshot_dir}/alerts_screenshot.png"
        set_zoom(driver, 0.5)
        driver.save_screenshot(alerts_screenshot)

        # Reset zoom to 100%
        set_zoom(driver, 1)
    except Exception as e:
        print(f"Failed to click on 'Alerts' tab: {e}")


    return [opened_page_screenshot, performance_screenshot, system_screenshot, alerts_screenshot]


    for filename in screenshot_filenames:
        with open(filename, "rb") as f:
            img = MIMEImage(f.read())
            img.add_header("Content-Disposition", "inline", filename=os.path.basename(filename))
            img.add_header("Content-ID", f"<{os.path.basename(filename)}>")
            msg.attach(img)
