      SITE_PASSWORD: $(SITE_PASSWORD)
      VPLEX_SITE_PASSWORD: $(VPLEX_SITE_PASSWORD)
      HITACHI_SITE_USER: $(HITACHI_SITE_USER)
      HITACHI_SITE_PASSWORD: $(HITACHI_SITE_PASSWORD)
