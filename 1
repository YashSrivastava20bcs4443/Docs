sudo mkdir -p /etc/nginx/ssl
sudo openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout /etc/nginx/ssl/CCO.fareportal.com.local.key -out /etc/nginx/ssl/CCO.fareportal.com.local.crt

ls -l /etc/nginx/ssl/

sudo find /etc/nginx -name "*.conf"

sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

sudo nano /etc/nginx/sites-available/default


# HTTP server block to redirect to HTTPS
server {
    listen 80;
    server_name CCO.fareportal.com.local;

    # Redirect all HTTP requests to HTTPS
    return 301 https://$host$request_uri;
}

# HTTPS server block
server {
    listen 443 ssl;
    server_name CCO.fareportal.com.local;

    # Path to SSL certificate and key
    ssl_certificate /etc/nginx/ssl/CCO.fareportal.com.local.crt;
    ssl_certificate_key /etc/nginx/ssl/CCO.fareportal.com.local.key;

    # SSL settings for better security
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH;

    # Root directory for your web files
    root /var/www/TFN-Web-Dashboard/client/build;
    index index.html index.htm;

    # Serve static files
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy API requests to your backend (adjust port if needed)
    location /api/ {
        proxy_pass http://127.0.0.1:3000; # Adjust to your backend port
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Optional: Add logging
    access_log /var/log/nginx/CCO.fareportal.com.local_access.log;
    error_log /var/log/nginx/CCO.fareportal.com.local_error.log;
}


sudo nginx -t

sudo systemctl reload nginx
