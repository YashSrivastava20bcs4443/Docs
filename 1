SELECT 
    "toAddress" AS "Number (toAddress)",  -- Fix: Use double quotes for case-sensitive columns
    
    COUNT(*) AS offered_calls,

    SUM(CASE 
            WHEN CAST("abandoned" AS BOOLEAN) = FALSE 
                 AND CAST("agentSeconds" AS INTEGER) > 0 
            THEN 1 ELSE 0 
        END) AS answered,

    SUM(CASE 
            WHEN CAST("abandoned" AS BOOLEAN) = TRUE 
                 AND CAST("inQueueSeconds" AS INTEGER) = 0 
            THEN 1 ELSE 0 
        END) AS ivr_abandon,

    SUM(CASE 
            WHEN CAST("abandoned" AS BOOLEAN) = TRUE 
                 AND CAST("inQueueSeconds" AS INTEGER) > 0 
            THEN 1 ELSE 0 
        END) AS queue_abandon,

    SUM(CASE 
            WHEN CAST("abandoned" AS BOOLEAN) = TRUE 
                 AND "endReason" IN ('Contact Hung Up', 'Contact Hang Up via Script') 
            THEN 1 ELSE 0 
        END) AS polite_disconnect

FROM contact_data
GROUP BY "toAddress"
ORDER BY offered_calls DESC;
