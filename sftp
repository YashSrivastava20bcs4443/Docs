---
- name: Backup FortiGate Firewalls
  hosts: firewalls
  gather_facts: no
  vars:
    backup_base_dir: /home/kushal/Backup/SCP_Backup
    ftp_server: 192.1.2.10
    ftp_user: yash
    ftp_password: 2002
    ftp_base_dir: Network_devices_Backup
  tasks:
    - name: Get current datetime
      set_fact:
        current_datetime: "{{ lookup('pipe', 'date +%Y-%m-%d-%H-%M-%S') }}"

    - name: Create backup directory for each firewall if it doesn't exist
      command: "mkdir -p {{ backup_base_dir }}/{{ inventory_hostname }}"
      delegate_to: localhost

    - name: Backup FortiGate configuration locally
      expect:
        command: "scp {{ ansible_user }}@{{ ansible_host }}:sys_config {{ backup_base_dir }}/{{ inventory_hostname }}/{{ inventory_hostname }}_{{ current_datetime }}.conf"
        responses:
          "assword:": "{{ ansible_ssh_pass }}"
        timeout: 60
      delegate_to: localhost

    - name: Ensure base directory exists on ftp server
      expect:
        command: "ftp {{ ftp_server }}"
        responses:
          "Name.*: ": "{{ ftp_user }}"
          "Password:": "{{ ftp_password }}"
          "ftp> ": "cd {{ ftp_base_dir }}\nbye"
        timeout: 60
      delegate_to: localhost

    - name: Create corresponding directory for the firewall on ftp server
      expect:
        command: "ftp {{ ftp_server }}"
        responses:
          "Name.*: ": "{{ ftp_user }}"
          "Password:": "{{ ftp_password }}"
          "ftp> ": "mkdir {{ ftp_base_dir }}/{{ inventory_hostname }}\nbye"
        timeout: 60
      delegate_to: localhost

    - name: Transfer backups to ftp server
      expect:
        command: "ftp {{ ftp_server }}"
        responses:
          "Name.*: ": "{{ ftp_user }}"
          "Password:": "{{ ftp_password }}"
          "ftp> ": "lcd {{ backup_base_dir }}/{{ inventory_hostname }}\ncd {{ ftp_base_dir }}/{{ inventory_hostname }}\nput *.conf\nbye"
        timeout: 60
      delegate_to: localhost

    - name: Delete local backups
      file:
        path: "{{ backup_base_dir }}/{{ inventory_hostname }}"
        state: absent
      delegate_to: localhost
